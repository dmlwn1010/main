<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a10.kim.SubActivity5">

    <TextView
        android:id="@+id/playView1"
        android:layout_width="85dp"
        android:layout_height="37dp"
        android:text="(수업중..)"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/textView2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="23dp"
        android:layout_marginRight="31dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:text="옆자리 대숲남: ㅈ,,저기요! (속닥속닥)"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/playView3"
        app:layout_constraintLeft_toLeftOf="@+id/playView3"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/playView3"
        android:layout_width="85dp"
        android:layout_height="23dp"
        android:text="저기요!! (톡톡)"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="194dp"
        app:layout_constraintLeft_toLeftOf="@+id/playButton"
        android:layout_marginLeft="112dp" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="1. (나: 나한테 하는 말인가..?) 무시한다.  "
        android:onClick="onClick6"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/playView2"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/playView3"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp" />

    <Button
        android:id="@+id/playView2"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginStart="3dp"
        android:text="2. 대답한다."
        android:onClick="onClick7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />
</android.support.constraint.ConstraintLayout>
